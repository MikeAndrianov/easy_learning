<div class="container">
  <h1> Home page </h1>
  <div class="row">

    <div class="services-half-width-text span6">
      <% if current_user %>
        <span> 
          Hello! You signed in as <span style="font-weight: bold;"> <%= current_user.email %> </span>
        </span>
        <%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => "btn" %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, :class => "btn btn-info"  %>
        <%= link_to "Sign in", new_user_session_path, :class => "btn btn-success" %>
      <% end %>
    </div>

    <div class="services-half-width-text span6">
      <%= current_user ? current_user.email : "no current_user" %>

      <h3> All users: </h3>
      <% @users.each do |user| %>
        <h6> <%= user.email %> </h6>
      <% end %>
    </div>
  </div>

</div>

