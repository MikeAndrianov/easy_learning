Name <%= @student.name %> <br>
Email <%= @student.email %><br>
Mobile <%= @student.mobile %><br>
<% if @student.group %>
	Group <%=@student.group.number %><br>
<% end %>
<%= link_to 'Edit', '#', class: 'btn btn-primary', id: 'edit-student-btn', remote: true %>
<div class="edit-student-form hidden">
<%= form_for @student, url: user_path do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :email %>
	<%= f.email_field :email %>
	<%= f.label :mobile %>
	<%= f.text_field :mobile %>
	<%= f.label :group_id %>
	<%= f.select :group_id, options_from_collection_for_select(Group.all, :id, :number, @student.group.number) %>
	<br>
	<%= f.submit 'Update' %>
	<% end %>
</div>