<%= form_for Course.new do |f| %>
  <%= f.label :name, "Course Name" %>
  <%= f.text_field :name %><br>
  <%= f.label :lecturer_id, "Lecturer" %>
  <%= f.select :lecturer_id, options_from_collection_for_select(Lecturer.all, :id, :name) %><br>
  <%= f.submit 'Create Course' %>
<% end %>

<table class="table table-bordered">
  <thead>
    <td> Course </td>
    <td> Lecturer </td>
  </thead>
  <tbody>
    <% @courses.in_groups_of(2, false) do |courses| %>
      <tr>
        <% courses.each do |course| %>
        <td> <%= link_to course.name, course_path(course) %> </td>
        <td> <%= course.lecturer.name %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @courses %>