<div class="container">
  <div class="row message-box">
    <div class="span2 func_mess">
        <div class="write">
          <%= link_to "Write", new_message_path %>
        </div>
        <div class="inbox">
          <%= link_to "Inbox", inbox_path  %>
        </div>
        <div class="outbox">
          <%= link_to "Outbox", outbox_path  %>
        </div>
    </div>
    <div class="span10 messages">
      <table class="table table-hover">
        <tbody>
          <% @messages.each do |message| %>
            <tr>
              <td></td>
              <td>To: <%= starting_recipients(message) %></td>
              <td><%= link_to starting_message(message),message_path(message) %></td>
              <td><%= pretty_date(message.created_at) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
