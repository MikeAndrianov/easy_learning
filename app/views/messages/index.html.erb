<div class="container">
  <div class="row">
    <div class="span2 func_mess">
        <div class="write">
          <%= link_to "Write", new_message_path %>
        </div>
        <div class="inbox">
          <%= link_to "Inbox"  %>
        </div>
        <div class="outbox">
          <%= link_to "Outbox"  %>
        </div>
    </div>
    <div class="span10">
      <table class="table">
        <tbody>
          <% @messages.each do |message| %>
            <tr>
              <td></td>
              <td><%= message.sender.name %></td>
              <td><%= link_to starting_message(message),message_path(message) %></td>
              <td><%= message.created_at.to_date %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

